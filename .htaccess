RewriteEngine On

# Redirigir dominio con tilde al dominio sin tilde (cualquier protocolo)
RewriteCond %{HTTP_HOST} ^(www\.)?elfortinporteño\.com\.ar$ [NC]
RewriteRule ^(.*)$ https://www.elfortinporteno.com.ar/$1 [R=301,L]

# Redirigir sin www a www (dominio sin tilde)
RewriteCond %{HTTP_HOST} ^elfortinporteno\.com\.ar$ [NC]
RewriteRule ^(.*)$ https://www.elfortinporteno.com.ar/$1 [R=301,L]

# Forzar HTTPS en todo el sitio
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}/$1 [R=301,L]

# Evitar acceso directo a archivos sensibles
<FilesMatch "\.htaccess$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Bloquear acceso a archivos de configuración comunes
<FilesMatch "^(wp-config|config|settings)\.php$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Comprimir contenido (mejora velocidad)
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# Cache en navegador (mejora velocidad)
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType text/html "access plus 1 week"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/gif "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
</IfModule>

# Prevenir listado de directorios
Options -Indexes